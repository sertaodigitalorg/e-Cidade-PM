{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": []
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"]
      }
    }
  },
  "projects": {
    "core": {"root": "packages/core"},
    "database": {"root": "packages/data-base-library"},
    "storage": {"root": "packages/storage-library"},
    "models": {"root": "packages/models"},
    "botpress": {"root": "packages/botpress-sdk"},
    
    "auth": { "root": "apps/auth-service" },
    "api": { "root": "apps/api-service" },
    "integration": { "root": "apps/integration-service" },
    "notifications": { "root": "apps/notifications-service" },
    "reports": { "root": "apps/reports-service" },
    "tasks": { "root": "apps/auth-service" },

    "ouvidoria": { "root": "tools/ouvidoria" },
    "portal": { "root": "tools/portal" },
    "postgres": { "root": "tools/auth-service" }
  },
  "nxCloudId": "67b713c2bddbc67fed1fdfbb"
}
